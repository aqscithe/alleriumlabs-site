<script src="../scripts/particleLogo.ts"></script>

<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <title>Allerium Labs - Game Studio</title>
    <meta name="description" content="Innovative game studio creating immersive experiences at the intersection of technology and human creativity." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <main>
		<!-- Hero Section with Logo -->
		<section class="hero-section" id="heroSection">
			<div class="hero-content">
				<!-- Logo will be rendered by fallback -->
			</div>
			<div class="scroll-indicator">
				<div class="scroll-arrow">â†“</div>
				<span>Scroll to explore</span>
			</div>
		</section>

		<!-- Current Project Section -->
		<section class="project-section current-project" id="currentProject">
			<div class="container">
				<h2>Current Project</h2>
				<div class="project-showcase">
					<div class="project-media">
						<div class="media-placeholder">
							<p>Game Screenshots / GIFs Coming Soon</p>
						</div>
					</div>
					<div class="project-info">
						<h3>Project Title</h3>
						<p>An innovative gaming experience that pushes the boundaries of interactive storytelling. Combining cutting-edge technology with immersive gameplay mechanics.</p>
						<div class="project-details">
							<span class="status">In Development</span>
							<span class="genre">Genre: Adventure / Strategy</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Past Projects Section -->
		<section class="project-section past-projects" id="pastProjects">
			<div class="container">
				<h2>Previous Work</h2>
				<div class="projects-grid">
					<div class="project-card">
						<div class="project-thumbnail">
							<div class="media-placeholder">Project 1</div>
						</div>
						<h4>Previous Game Title</h4>
						<p>Brief description of the project and its key features.</p>
					</div>
					<div class="project-card">
						<div class="project-thumbnail">
							<div class="media-placeholder">Project 2</div>
						</div>
						<h4>Another Project</h4>
						<p>Brief description of this project and what made it special.</p>
					</div>
					<div class="project-card">
						<div class="project-thumbnail">
							<div class="media-placeholder">Project 3</div>
						</div>
						<h4>Early Work</h4>
						<p>One of our earlier projects that helped shape our vision.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Connect Section -->
		<section class="connect-section" id="connectSection">
			<div class="container">
				<h2>Connect & Collaborate</h2>
				<p>Join our community, follow our journey, or get involved with Allerium Labs</p>
				
				<div class="connect-grid">
					<div class="connect-category">
						<h3>Follow Our Journey</h3>
						<div class="social-links">
							<a href="#" class="social-link youtube">
								<span class="icon">ðŸ“º</span>
								<span>YouTube</span>
								<span class="desc">Dev vlogs & gameplay</span>
							</a>
							<a href="#" class="social-link bluesky">
								<span class="icon">ðŸ¦‹</span>
								<span>Bluesky</span>
								<span class="desc">Daily updates & thoughts</span>
							</a>
						</div>
					</div>

					<div class="connect-category">
						<h3>Join the Community</h3>
						<div class="social-links">
							<a href="#" class="social-link discord">
								<span class="icon">ðŸ’¬</span>
								<span>Discord</span>
								<span class="desc">Chat with the team & community</span>
							</a>
							<a href="#" class="social-link linkedin">
								<span class="icon">ðŸ’¼</span>
								<span>LinkedIn</span>
								<span class="desc">Professional updates</span>
							</a>
						</div>
					</div>

					<div class="connect-category">
						<h3>Get Involved</h3>
						<div class="involvement-options">
							<div class="option-card">
								<h4>Join the Team</h4>
								<p>Looking for talented developers, artists, and designers</p>
								<a href="#" class="cta-button">View Opportunities</a>
							</div>
							<div class="option-card">
								<h4>Support Our Work</h4>
								<p>Interested in investing or collaborating on projects</p>
								<a href="#" class="cta-button">Get in Touch</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Footer Section -->
		<footer class="footer-section">
			<div class="container">
				<div class="footer-content">
					<p>&copy; 2025 Allerium Labs. All rights reserved.</p>
					<p>Allerium Labs logo &copy; 2025 Allerium Labs. All rights reserved.</p>
				</div>
			</div>
		</footer>
    </main>
  </body>
</html>