---
import '../styles/global.css';
import logo from '../assets/img/full-logo/Logo_White.png';
---

<script src="../scripts/landing.js"></script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Landing Page</title>
  </head>
  <body>
    <main>
		<button class="theme-toggle" id="themeToggle">Light Mode</button>

		<section class="al-home">
		   <div class="section logo-section" id="logoSection">
			   <div class="logo-container">
				   <img id="logoImage" src={logo.src} alt="Allerium Labs Logo">
			   </div>
		   </div>
		   
		   <div class="section welcome-section" id="welcomeSection">
			   <div class="welcome-message">
				   <h1>Welcome to Allerium Labs</h1>
				   <p>We're pioneering innovative solutions at the intersection of technology and human experience. Our mission is to create tools and systems that empower people to achieve more through intuitive design and cutting-edge functionality.</p>
			   </div>
		   </div>
		   
		   <div class="section final-section" id="finalSection">
			   <div class="final-message">
				   To be continued...
			   </div>
		   </div>
		</section>
    </main>
  </body>
</html>